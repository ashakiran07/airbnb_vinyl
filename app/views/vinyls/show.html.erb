<%# the filter js function will use jQuery at the moment%>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<div class="container">
  <div class="row">
    <div class="col-12">
      <%# <h1>All Vinyls we have listed</h1> %>
       <% if @query %>
        <h2>You searched for <strong><%= @query %></strong>. We found <%= @vinyls.count %> vinyls out of our <%= Vinyl.count %> in our Archive for rental.</h2>
      <% else %>
        <h2>Currently there are <%= Vinyl.count %> Vinyls in our Archive for rental.</h2>
      <% end %>
    </div>
  </div>
  </div>
</div>

<%# container for all the Vinyl cards Filters%>
<div class="container align-items-right">
  <div class="row align-items-right">
    <div class="col-lg-12">
    <%# # filter can be set by genre %>
      <ul class="filters">
        <li class="active"><a href="#!">all</a></li>
        <li><a href="#!">pop</a></li>
        <li><a href="#!">electro</a></li>
        <li><a href="#!">indie-rock</a></li>
      </ul>
      <div class="projects">

        <div class="row">
        <% @vinyls.each do |vinyl| %>
          <div class="col-lg-4 item <%vinyl.genre%>">
          <%# # for each row 3 cards 1 per vinly %>
            <div class="card">
              <div class="card-head">
                <%= image_tag vinyl.picture_url, alt: vinyl.title, class: "img-fluid card-img" %>
                <div class="card-overlay"><h2><%= vinyl.genre %></h2></div>
              </div>
              <div class="card-body">
                <h2><%= vinyl.title %> - By <%= vinyl.artist %></h2>
              </div>
            </div>
          </div>
          <% end %>
        </div>

      </div>


    </div>
  </div>
</div>
