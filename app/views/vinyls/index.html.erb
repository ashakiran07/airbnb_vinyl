<%# the filter js function will use jQuery at the moment%>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.min.js"></script>

<div class="container" style="box-shadow: none !important;">
  <div class="row">
    <div class="col-12" style="box-shadow: none !important;">
      <%# <h1>All Vinyls we have listed</h1> %>
       <% if @query %>

        <h2>You searched for <strong><%= @query %></strong>. We found <%= @vinyls.count %> vinyls out of our <%= Vinyl.count %> in our Archive for rental.</h2>
      <% else %>
        <h2>Currently there are <%= Vinyl.count %> Vinyls in our Archive for rental.</h2>
      <% end %>
    </div>
  </div>
</div>


<%# container for all the Vinyl cards Filters%>
<div class="container align-items-right" style="box-shadow: none !important;">
  <div class="row align-items-right">
    <div class="col-lg-12">
      <!-- Filter buttons -->
      <ul class="filters">
        <li class="active" data-filter="*"><a href="#!">All</a></li>
        <li data-filter=".indie-rock"><a href="#!">Classical</a></li>
        <li data-filter=".pop"><a href="#!">Pop</a></li>
        <!-- Add more filter categories as needed -->
      </ul>

      <!-- Vinyl cards -->
      <div class="vinyls_card">
        <div class="row">
          <% @vinyls.each do |vinyl| %>
            <div class="col-lg-4 item <%= vinyl.genre %>">
              <a href="<%= vinyl_path(vinyl) %>" class="card-link">
                <div class="card">
                  <div class="card-head">
                    <% if vinyl.photo.attached? %>
                      <%= cl_image_tag @vinyl.photo.key, crop: :fill, class: "d-block w-100 h-100" %>
                    <% else %>
                      <img src="/assets/vinyltwo.jpg" class="img-fluid card-img">
                    <% end %>
                    <div class="card-overlay" style="color: white";><h2><%= vinyl.genre %></h2></div>
                  </div>
                  <div class="card-body">
                    <h2 class="card-title text-decoration-none" style="color: #063970;"><%= vinyl.title %> - By <span class="artist-name" style="color: #51749b;"><%= vinyl.artist %></span></h2>
                    <%= link_to "More info", vinyl_path(vinyl), style: "text-decoration: none;" %>
                  </div>

                </div>
              </a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<script>
// filter function
(function(){

    'use strict';


    let $vinyls_card = $('.vinyls_card');

    $vinyls_card.isotope({
        itemSelector: '.item',
        layoutMode: 'fitRows'
    });

    $('ul.filters > li').on('click', function(e){

        e.preventDefault();

        let filter = $(this).attr('data-filter');

        $('ul.filters > li').removeClass('active');
        $(this).addClass('active');

        $vinyls_card.isotope({filter: filter});

    });

})(jQuery);
</script>
