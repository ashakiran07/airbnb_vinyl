<div class="container" style="box-shadow: none !important; ">
  <div class="row">
    <h3 style="text-align: center;margin: 70px 0px 0px 0px; text-transform: uppercase; letter-spacing: 4px; color: #414040;">All Your Bookings of Vinyls</h3>

    <div class="container mb-5" style="box-shadow: none !important; ">
      <div class="d-flex justify-content-between my-4">
        <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't any vinyls yet!" if @vinyls.empty? %></em></small></span>
      </div>
      <div class="row my-2">

        <% @vinyls.each do |vinyl| %>
          <div class="col-12 col-sm-4 mb-4" data-aos="zoom-in">
            <div class="bg-white rounded shadow h-100">
              <div class="row h-100">
                <div class="col-sm-12 col-md-7">
                  <% if vinyl.photo.attached? %>
                     <%= cl_image_tag vinyl.photo.key, crop: :fill, class:"d-block w-100 h-100" %>
                  <% else %>
                    <img src="/assets/vinyltwo.jpg"  class="d-block w-100 h-100">
                  <% end %>
                </div>
                <div class="col-sm-12 col-md-5 p-0">
                  <div class="card-block p-4" style="position: relative; height: 100%;">
                    <strong><%= vinyl.title %> <span class="text-muted font-weight-normal"> <br><%= vinyl.price %> CHF <i class="fa-solid fa-money-bill"></i></span></strong>
                    <div class="d-flex align-items-end justify-content-between  mt-3 mb-5">
                      <div>
                        <i class="fas fa-quote-left me-2"></i><small class="flex-grow-1"><%= "Has availability" if vinyl.availability == true %><%= "Has no availability" if vinyl.availability == false %></small>
                      </div>
                    </div>
                    <div class="d-flex align-items-end pb-4" style="position: absolute; bottom: 0; flex-wrap: wrap;">
                      <small><%= link_to "Edit", edit_vinyl_path(vinyl), class:"btn btn-outline-secondary btn-sm float-right me-2" %></small >
                      <small><%= link_to "Delete", vinyl_path(vinyl), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{vinyl.title} from your bookings"}, class:"btn btn-outline-secondary btn-sm float-right " %></small >
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
