<div class="container mt-0 mb-2">
  <%= link_to my_bookings_path, class: "btn btn-outline-dark float-end bg-light fw-bold" do %> My Bookings<i class="fa-solid fa-chevron-right"></i>
<% end %>
</div>

<div class="container text-center">
  <div class="row">
    <div class="col">

    <div class="card mb-3">
     <%= cl_image_tag @current_vinyl_booking.photo.key, crop: :fill, class: "card-img-top" %>
      <div class="card-body">
        <p class="card-title" style="text-align: center;margin: 10px 10px 5px 5px; letter-spacing: 1px; color: #FFFFF;"> Your booking for "<%= @current_vinyl_booking.title %>" from "<%= @current_vinyl_booking.artist %>" was successful!</p>
        <p class="card-text"><small class="text-body-secondary"><i class="fa-regular fa-calendar-days"></i> <%= @booking.start_date %> to <%= @booking.end_date %> </small></p>
        <%= cl_image_tag @current_vinyl_booking.photo.key, crop: :fill, class: "card-img-top" %>
      </div>
    </div>
    </div>
    <div class="col">
     <div class="card">
      <div class="card-body">
      <div class="flex-container">
          <div><%= link_to "All my Bookings", my_bookings_path, class:"btn btn-outline-secondary btn-sm float-right me-2" %></div>
          <div>Map</div>
      </div>
        <p class="card-text"><small class="text-body-secondary">You vinyl package will be send here:</small></p>
        <div style="width: 100%; height: 600px;"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
      </div>
    </div>
  </div>
</div>
